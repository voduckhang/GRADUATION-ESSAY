@model LUANVANTOTNGHIEP_VODUCANKHANG.ModelViews.ChangePasswordViewModel

@*@{
    ViewData["Title"] = "ChangePasswordPartialView";
    Layout = "~/Views/Shared/_Layout.cshtml";
}*@


<div class="row">
    <div class="col-md-12 bg-success" style="font-weight:bolder; border:solid medium">
        <a style="color: whitesmoke; padding-left: 440px; font-size: 30px;" class="col-lg-12" href="/change-password.html">CHANGE PASSWORD</a>
    </div>
    <br />
    <div class="col-md-12" style="border:solid thick">
        <br />
        <form asp-action="ChangePassword" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CustomerId" />
            <div style="color:forestgreen; font-weight:inherit" class="form-group">
                <label asp-for="PasswordNow" class="control-label"></label>
                <input type="password" asp-for="PasswordNow" class="form-control" />
                <span asp-validation-for="PasswordNow" class="text-danger"></span>
            </div>
            <div style="color: forestgreen; font-weight:inherit" class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input type="password" asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div style="color: forestgreen; font-weight: inherit" class="form-group">
                <label asp-for="ConfirmPassword" class="control-label"></label>
                <input type="password" asp-for="ConfirmPassword" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div style="color:forestgreen" class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


