@model LUANVANTOTNGHIEP_VODUCANKHANG.ModelViews.RegisterVM

@{
    ViewData["Title"] = "Dangkytaikhoan";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row h-100 align-items-center justify-content-center" style="min-height: 100vh;">
    <div class="col-12 col-sm-8 col-md-6 col-lg-5 col-xl-4">
        <form asp-action="Dangkytaikhoan">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="bg-secondary rounded p-4 p-sm-5 my-4 mx-3">
                <div>
                    <a href="index.html" class="">
                        <h3 style="text-align:center" class="text-primary"><i class="fa fa-user-edit me-2"></i>ĐĂNG KÝ TÀI KHOẢN</h3>
                    </a>

                </div>
                <br />
                <div class="form-floating mb-3">
                    <label for="floatingText">Họ Và Tên</label>

                    <input type="text" asp-for="FullName" class="form-control" id="floatingText">
                    <span asp-validation-for="FullName" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <label for="floatingInput">Email address</label>
                    <input type="email" asp-for="Email" class="form-control" id="floatingInput">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <label for="floatingInput">Số Điện Thoại</label>
                    <input type="tel" asp-for="Phone" class="form-control" id="floatingInput">
                    <span asp-validation-for="Phone" class="text-danger"></span>
                </div>

                <div class="form-floating mb-3">
                    <label for="floatingInput">Địa Chỉ</label>

                    <input type="text" asp-for="DiaChi" class="form-control" id="floatingInput">
                    <span asp-validation-for="DiaChi" class="text-danger"></span>
                </div>
                <div class="form-floating mb-3">
                    <label for="floatingInput">Ngày Sinh</label>
                    <input type="date" asp-for="NgaySinh" class="form-control" id="floatingInput">
                    <span asp-validation-for="NgaySinh" class="text-danger"></span>
                </div>
                <div class="form-floating mb-4">
                    <label for="floatingPassword">Password</label>
                    <input type="password" asp-for="Password" class="form-control" id="floatingPassword">
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-floating mb-4">
                    <label for="floatingPassword">Confirm Password</label>
                    <input type="password" asp-for="ConfirmPassword" class="form-control" id="floatingPassword">
                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                </div>
