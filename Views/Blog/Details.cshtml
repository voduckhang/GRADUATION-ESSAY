@model LUANVANTOTNGHIEP_VODUCANKHANG.Models.Tintuc

@{
    ViewData["Title"] = Model.Tieude;
    Layout = "~/Views/Shared/_Layout.cshtml";
    string url = $"/tintuc/{Model.Tieude}-{Model.TintucId}.html";
    List<Tintuc> Baivietlienquan = ViewBag.baivietlienquan;
}


<!-- Blog Details Section Begin -->
<section class="blog-details spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-md-5 order-md-1 order-2">
                <div class="blog__sidebar">
                    <div class="blog__sidebar__search">
                        <form action="#">
                            <input type="text" placeholder="Search...">
                            <button type="submit"><span class="icon_search"></span></button>
                        </form>
                    </div>
                    <div class="blog__sidebar__item">
                        <h4>Categories</h4>
                        <ul>
                            <li><a href="#">All</a></li>
                            <li><a href="#">Beauty (20)</a></li>
                            <li><a href="#">Food (5)</a></li>
                            <li><a href="#">Life Style (9)</a></li>
                            <li><a href="#">Travel (10)</a></li>
                        </ul>
                    </div>
       

                </div>
            </div>
            <div class="col-lg-8 col-md-7 order-md-1 order-1">
                <div class="blog__details__text">
                    <img width="793" height="410" src="~/images/TinTuc/@Model.Hinhanhtintuc" alt="@Model.Hinhanhtintuc">
                    <p>
                       @Model.Noidung
                    </p>
                    <h3>
                        @Model.Noidung
                    </h3>
                    <p>
                        @Model.Noidung
                    </p>
                </div>
                <div class="blog__details__content">
                    <div class="row">
                        <div class="col-lg-6">
                            <div class="blog__details__author">

                                <div class="blog__details__author__text">
                                    <h6>@Model.Taikhoan.Hovaten</h6>
                                    <span>Tác Giả</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="blog__details__widget">
                                <ul>
                                    <li><span>Categories:</span> Food</li>
                                    <li><span>Tags:</span> All, Trending, Cooking, Healthy Food, Life Style</li>
                                </ul>
                                <div class="blog__details__social">
                                    <a href="#"><i class="fa fa-facebook"></i></a>
                                    <a href="#"><i class="fa fa-twitter"></i></a>
                                    <a href="#"><i class="fa fa-google-plus"></i></a>
                                    <a href="#"><i class="fa fa-linkedin"></i></a>
                                    <a href="#"><i class="fa fa-envelope"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Blog Details Section End -->
<!-- Related Blog Section Begin -->
<section class="related-blog spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="section-title related-blog-title">
                    <h2>Post You May Like</h2>
                </div>
            </div>
        </div>
        <div class="row">
            @if (Baivietlienquan != null)
            {
                foreach (var item in Baivietlienquan)
                {
                    
                    string _url = $"/tintuc/{item.Tieude}-{item.TintucId}.html";
                    <div class="col-lg-4 col-md-4 col-sm-6">
                        <div class="blog__item">
                            <div class="blog__item__pic">
                                <a href="@_url"> <img src="~/images/TinTuc/@item.Hinhanhtintuc" alt="@item.Tieude"></a>
                            </div>
                            <div class="blog__item__text">
                                <ul>
                                    <li><i class="fa fa-calendar-o"></i>@item.Ngaytaotintuc</li>
                                    <li><i class="fa fa-comment-o"></i> 5</li>
                                </ul>
                                <h5><a href="@_url">@item.Tieude</a></h5>
                                <p>@item.Noidung </p>
                            </div>
                        </div>
                    </div>

                }
            }

        </div>
    </div>
</section>
<!-- Related Blog Section End -->


