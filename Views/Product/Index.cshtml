                </div>
            </div>
            <div class="col-lg-9 col-md-7">
                <div class="product__discount">
                    <div class="section-title product__discount__title">
                        <h2>DANH SÁCH SẢN PHẨM</h2>
                    </div>

                </div>
                <div class="filter__item">
                    <div class="row">
                        <div class="col-lg-4 col-md-5">
                            <div class="filter__sort">
                                <span>Sort By</span>
                                <select>
                                    <option value="0">Default</option>
                                    <option value="0">Default</option>
                                </select>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-4">
                            <div class="filter__found">
                                <h6><span>@Model.Count()</span> Được Tìm Thấy</h6>
                            </div>
                        </div>
                        <div class="col-lg-4 col-md-3">
                            <div class="filter__option">
                                <span class="icon_grid-2x2"></span>
                                <span class="icon_ul"></span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="row">
                    @if (Model != null && Model.Count() > 0)
                    {
                        foreach (var item in Model)
                        {
                            string url = $"/{item.Tensanpham}-{item.SanphamId}.html";
                            <div class="col-lg-4 col-md-6 col-sm-6">
                                <div class="product__item">
                                    <div class="product__item__pic set-bg">
                                        <a href="@url">  <img src="~/images/HinhAnh/@item.Hinhanh" alt="@item.Hinhanh"></a>
                                        <ul class="add-to-cart product__item__pic__hover">
                                            <li><a href="#"><i class="fa fa-heart"></i></a></li>
                                            <li><a href="#"><i class="fa fa-retweet"></i></a></li>
                                            <li><a href="#"><i class="fa fa-shopping-cart"></i></a></li>

                                        </ul>
                                    </div>

                                    <div class="product__item__text">
                                        <h6><a href="@url">@item.Tensanpham</a></h6>
                                        <h5>
                                            @*@item.Giatien.Value.ToString("#,##0") VND*@
                                            @string.Format("{0:0,0 VND}", item.Giatien)

                                        </h5>
                                    </div>
                                </div>
                            </div>

                        }
                    }
                    else
                    {
                        <p style="align-items:center; color:forestgreen; font-weight:bold;">Không Có Sản Phẩm Nào Cả. Xin Vui Lòng Thử Lại!<span> 😭</span></p>
                    }


                </div>
                <div aria-label="Page navigation example">
                    <ul class="pagination">
                        <pager class="paper-container" options="@PagedListRenderOptions.Bootstrap4PageNumbersOnly" list="@Model" asp-area="" asp-controller="Product" asp-action="Index"></pager>
                    </ul>
                </div>

            </div>
        </div>
    </div>
</section>
