@{
    ViewData["Title"] = "Shop -" + ViewBag.CurrentPage;
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<Danhmuc> danhmucs = ViewBag.CurrentCategory;
   
}


<!-- Product Section Begin -->
<section class="product spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-5">
                <div class="blog__sidebar__search">
                    <form asp-controller="Product" asp-action="Index">
                        <input type="text" id="searchText" name="searchText" placeholder="Search..." />
                        <button type="submit"><span class="icon_search"></span></button>
                    </form>
                </div>
                <div class="sidebar">
                    <div class="sidebar__item">
                        <h4>DANH MỤC SẢN PHẨM</h4>
                        <ul>
                            @foreach (var item in danhmucs)
                            {
                                <li><a href="/shop.html?catID=@item.DanhmucId">@item.Tendanhmuc</a></li>
                            }



                        </ul>
                    </div>
                    <div style="border:groove;padding-left:70px;">
                        <form asp-controller="Product" asp-action="Index">
                            <div>
                                <label style="color:forestgreen"><b>Loại Sản Phẩm</b></label><br />
                                @foreach (var item in danhmucs)
                                {
                                    <input type="radio" class="btn-check" name="lsp" id="lsp" value="@item.DanhmucId">@item.Tendanhmuc<br />
                                }
                            </div>
                            <br />
                            <div>
                                <label style="color:forestgreen"><b>Dung Lượng</b></label><br />
                                <input type="radio" class="btn-check" name="dl"  id="dl" value="32">32 GB<br />
                                <input type="radio" class="btn-check" name="dl"  id="dl" value="64">64 GB<br />
                                <input type="radio" class="btn-check" name="dl"  id="dl" value="128">128 GB<br />
                                <input type="radio" class="btn-check" name="dl"  id="dl" value="256">256 GB<br />
                                <input type="radio" class="btn-check" name="dl"  id="dl" value="512">512 GB<br />
                                <input type="radio" class="btn-check" name="dl"  id="dl" value="1">1 TB<br />
                            </div>
                            <br />
                            <div>
                                <label  style="color:forestgreen"><b>Giá Tiền</b></label><br />
                                <input type="radio" class="btn-check" name="gt" id="gt" value="2000000">Dưới 2 Triệu<br />
                                <input type="radio" class="btn-check" name="gt" id="gt" value="7000000">Dưới 7 Triệu<br />
                                <input type="radio" class="btn-check" name="gt" id="gt" value="14000000">Dưới 14 Triệu<br />
                                <input type="radio" class="btn-check" name="gt" id="gt" value="20000000">Dưới 20 Triệu<br />
                                <input type="radio" class="btn-check" name="gt" id="gt" value="50000000">Dưới 50 Triệu<br />
                            </div>
                            <br />
                            <button type="submit" style="align-content:center">ÁP DỤNG</button>
                        </form>
                    </div>
