@model LUANVANTOTNGHIEP_VODUCANKHANG.ModelViews.SendMailDTO
@{
    ViewData["Title"] = "LIÊN HỆ VỚI CHÚNG TÔI";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- Contact Section Begin -->
<section class="contact spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-3 col-md-3 col-sm-6 text-center">
                <div class="contact__widget">
                    <span class="icon_phone"></span>
                    <h4>Phone</h4>
                    <p>033-6286-994</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-6 text-center">
                <div class="contact__widget">
                    <span class="icon_pin_alt"></span>
                    <h4>Address</h4>
                    <p>Chung Cư Topaz Elite, Phường 4, Quận 8, Thành Phố Hồ Chí Minh</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-6 text-center">
                <div class="contact__widget">
                    <span class="icon_clock_alt"></span>
                    <h4>Open time</h4>
                    <p>09:00 am to 22:00 pm</p>
                </div>
            </div>
            <div class="col-lg-3 col-md-3 col-sm-6 text-center">
                <div class="contact__widget">
                    <span class="icon_mail_alt"></span>
                    <h4>Email</h4>
                    <p>Khangvo37@gmail.com</p>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Contact Section End -->
<!-- Contact Form Begin -->
<div class="contact-form spad">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="contact__form__title">
                    <h2>Liên Hệ Với Chúng Tôi</h2>
                </div>
                <div class="contact__form__title">
                    <h6>@ViewBag.Message</h6>
                </div>
            </div>
        </div>
        <form asp-controller="Home" asp-action="Contact" method="post">
        
            <div class="row">
                <div class="col-lg-6 col-md-6">
                    <label asp-for="@Model.Name"></label>
                    <input asp-for="@Model.Name" type="text" placeholder="Họ Và Tên">
                    <span class="text-danger" asp-validation-for="@Model.Name"></span>
                </div>
                <div class="col-lg-6 col-md-6">
                    <label asp-for="@Model.Email"></label>
                    <input asp-for="@Model.Email" type="text" placeholder="Email">
                    <span class="text-danger" asp-validation-for="@Model.Email"></span>
                </div>
                <div class="col-lg-6 col-md-6">
                    <label asp-for="@Model.PhoneNumber"></label>
                    <input asp-for="@Model.PhoneNumber" type="text" placeholder="Số Điện Thoại">
                    <span class="text-danger" asp-validation-for="@Model.PhoneNumber"></span>
                </div>
                <div class="col-lg-6 col-md-6">
                    <label asp-for="@Model.Subject"></label>
                    <input asp-for="@Model.Subject" type="text" placeholder="Chủ Đề">
                    <span class="text-danger" asp-validation-for="@Model.Subject"></span>
                </div>
                <div class="col-lg-12">
                    <label asp-for="@Model.Masodonhang">Mã Số Đơn Hàng (Hãy bỏ trống nếu bạn không hủy đơn hàng 😄 )</label>
                    <input asp-for="@Model.Masodonhang" type="text" placeholder="Mã số đơn hàng">
                    <span class="text-danger" asp-validation-for="@Model.Masodonhang"></span>
                </div>
                <div class="col-lg-12">
                    <label asp-for="@Model.Massage"></label>
                    <textarea asp-for="@Model.Massage" placeholder="Nội dung phản hồi">Nội Dung Phản Hồi</textarea>
                    <span class="text-danger" asp-validation-for="@Model.Massage"></span>
                    <button type="submit" class="site-btn">GỬI PHẢN HỒI</button>
                </div>
            </div>
      

        </form>
    </div>
</div>
<!-- Contact Form End -->
