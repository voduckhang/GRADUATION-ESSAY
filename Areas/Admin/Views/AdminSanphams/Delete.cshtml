@model LUANVANTOTNGHIEP_VODUCANKHANG.Models.Sanpham

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="container-fluid pt-4 px-4">Delete</h1>

<h3 class="container-fluid pt-4 px-4">Are you sure you want to delete this?</h3>
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-12 col-xl-12">
            <div class="bg-secondary rounded h-100 p-4">
                <h6 class="mb-4">Xác nhận xóa sản phẩm</h6>
                <h6 class="mb-4">@ViewBag.Message</h6>
                <table class="table">

                    <tbody>
                        <tr>
                            <td>Tên Sản Phẩm</td>
                            <td>@Model.Tensanpham  </td>
                        </tr>
                        <tr>
                            <td> Mô Tả</td>
                            <td>@Model.Motasanpham</td>
                        </tr>
                        <tr>
                            <td> Hình Ảnh</td>
                            <td>@Model.Hinhanh</td>
                        </tr>
                        <tr>
                            <td> Dung Lượng</td>
                            <td>@Model.Dungluong</td>
                        </tr>
                        <tr>
                            <td> Giá Tiền</td>
                            <td>@Model.Giatien.Value.ToString("#,##0") VND</td>
                        </tr>
                        <tr>
                            @if (Model.Tonkho.Value > 0)
                            {
                                <td>Còn Hàng</td>
                            }
                            else
                            {
                                <td>Hết Hàng</td>
                            }


                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid pt-4 px-4">

    <form asp-action="Delete">
        <input type="hidden" asp-for="SanphamId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-danger">Back to List</a>
    </form>
</div>
