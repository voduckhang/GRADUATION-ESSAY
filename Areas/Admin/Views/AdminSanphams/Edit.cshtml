@model LUANVANTOTNGHIEP_VODUCANKHANG.Models.Sanpham

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="container-fluid pt-4 px-4">Edit</h1>

<h4 class="container-fluid pt-4 px-4">Sanpham</h4>
<hr />
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-12 col-xl-12">
            <div class="bg-secondary rounded h-100 p-4">
                <h6 class="mb-4">Chỉnh Sửa Thông Tin Khách Hàng</h6>
             
                <form asp-controller="AdminSanphams" asp-action="Edit" asp-route-id="@Model.SanphamId" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SanphamId" />
            <input type="hidden" asp-for="Hinhanh" />

            <div class="form-group">
                <label asp-for="Tensanpham" class="control-label">Tên Sản Phẩm</label>
                <input asp-for="Tensanpham" class="form-control bg-white" />
                <span asp-validation-for="Tensanpham" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Motasanpham" class="control-label">Mô Tả Sản Phẩm</label>
                <textarea asp-for="Motasanpham" class="form-control bg-white"></textarea>
                <span asp-validation-for="Motasanpham" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="DanhmucId" class="control-label">Tên Danh Mục</label>
                <select asp-for="DanhmucId" class="form-control bg-white" asp-items="ViewBag.DanhmucId"></select>
                <span asp-validation-for="DanhmucId" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Hinhanh" class="control-label">Hình Ảnh</label>
                <img width="200" height="200" src="~/images/HinhAnh/@Model.Hinhanh" alt="@Model.Hinhanh" />
                <input name="fthumb" type="file" asp-for="Hinhanh" class="form-control bg-white" />
                <span asp-validation-for="Hinhanh" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Tonkho" class="control-label">Tồn Kho</label>
                <input asp-for="Tonkho" class="form-control bg-white" />
                <span asp-validation-for="Tonkho" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Dungluong" class="control-label">Dung Lượng</label>
                <input asp-for="Dungluong" class="form-control bg-white" />
                <span asp-validation-for="Dungluong" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="HedieuhanhId" class="control-label">Hệ Điều Hành</label>
                <select asp-for="HedieuhanhId" class="form-control bg-white" asp-items="ViewBag.HedieuhanhId"></select>
                <span asp-validation-for="HedieuhanhId" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <label asp-for="Giatien" class="control-label">Giá Tiền</label>
                <input asp-for="Giatien" class="form-control bg-white" />
                <span asp-validation-for="Giatien" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid pt-4 px-4">
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>

