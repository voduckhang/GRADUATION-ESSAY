@model LUANVANTOTNGHIEP_VODUCANKHANG.Models.Hedieuhanh

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}
<h1 class="container-fluid pt-4 px-4">Delete</h1>

<h3 class="container-fluid pt-4 px-4">Are you sure you want to delete this?</h3>

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-12 col-xl-12">
            <div class="bg-secondary rounded h-100 p-4">
                <h6 class="mb-4">Xác nhận xóa hệ điều hành</h6>
                <h6 class="mb-4">@ViewBag.Message</h6>
                <table class="table">

                    <tbody>
                        <tr>

                            <td> Tên Hệ Điều Hành</td>
                            <td> @Html.DisplayFor(model => model.Tenhedieuhanh)</td>

                        </tr>

                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid pt-4 px-4">
    <form asp-action="Delete">
        <input type="hidden" asp-for="HedieuhanhId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-danger" >Back to List</a>
    </form>
</div>

