@model LUANVANTOTNGHIEP_VODUCANKHANG.Models.Hedieuhanh

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-12 col-xl-12">
            <div class="bg-secondary rounded h-100 p-4">
                <h6 class="mb-4">Chỉnh Sửa Hệ Điều Hành</h6>
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="HedieuhanhId" />
                    <div class="form-group">
                        <label asp-for="Tenhedieuhanh" class="control-label"></label>
                        <br />
                        <input asp-for="Tenhedieuhanh" class="form-control bg-white" />
                        <br />
                        <span asp-validation-for="Tenhedieuhanh" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid pt-4 px-4">
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>


