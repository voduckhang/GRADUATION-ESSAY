@model LUANVANTOTNGHIEP_VODUCANKHANG.Models.Danhmuc

@{
    ViewData["Title"] = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1 class="container-fluid pt-4 px-4">Create</h1>

<hr />

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-sm-12 col-xl-12">
            <div class="bg-secondary rounded h-100 p-4">
                <h6 class="mb-4">Tạo Danh Mục Mới</h6>
                <form asp-controller="AdminDanhmucs" asp-action="Create" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="Tendanhmuc" class="control-label"></label>
                        <br />
                        <input asp-for="Tendanhmuc" class="form-control" />
                        <br />
                        <span asp-validation-for="Tendanhmuc" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Hinhanh" class="control-label"></label>
                        <br />
                        <input name="fthumb" type="file" asp-for="Hinhanh" class="form-control" />
                        <br />
                        <span asp-validation-for="Hinhanh" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


<div  class="container-fluid pt-4 px-4">
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>

