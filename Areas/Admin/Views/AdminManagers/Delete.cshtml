@model LUANVANTOTNGHIEP_VODUCANKHANG.Models.AdminManager

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminForAdminLayout.cshtml";
}

<h1 class="container-fluid pt-4 px-4">Delete</h1>

<h3 class="container-fluid pt-4 px-4">Are you sure you want to delete this?</h3>


<div class="container-fluid pt-4 px-4" style="color:whitesmoke">
    <div class="row g-4">
        <div class="col-sm-12 col-xl-12">
            <div class="bg-secondary rounded h-100 p-4" style="color:whitesmoke">
                <h6 class="mb-4">Xác nhận xóa quyền truy cập</h6>
                <table class="table" style="color:whitesmoke">

                    <tbody>
                        <tr>

                            <td>Username</td>
                            <td> @Html.DisplayFor(model => model.TenAdmin)</td>

                        </tr>
                        <tr>

                            <td>Mật Khẩu</td>
                            <td> @Html.DisplayFor(model => model.MatkhauAdmin)</td>
                        </tr>
                        <tr>

                            <td>Quyền Truy Cập</td>
                            <td> @Html.DisplayFor(model => model.Phanquyen.Tenquyentruycap)</td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid pt-4 px-4">
    <form asp-action="Delete">
        <input type="hidden" asp-for="AdminId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-danger">Back to List</a>
    </form>
</div>

