@model LUANVANTOTNGHIEP_VODUCANKHANG.Models.AdminManager

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminForAdminLayout.cshtml";
}

<h1 class="container-fluid pt-4 px-4">Edit</h1>

<hr />


<div class="container-fluid pt-4 px-4" style="color:whitesmoke">
    <div class="row g-4">
        <div class="col-sm-12 col-xl-12">
            <div class="bg-secondary rounded h-100 p-4" style="color:whitesmoke">
                <h6 class="mb-4">Chỉnh Sửa Quản Trị Viên</h6>
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="AdminId" />
                    <div class="form-group">
                        <label asp-for="TenAdmin" class="control-label">Username</label>
                        <input asp-for="TenAdmin" class="form-control" />
                        <span asp-validation-for="TenAdmin" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MatkhauAdmin" class="control-label">Mật Khẩu</label>
                        <input type="password" asp-for="MatkhauAdmin" class="form-control" />
                        <span asp-validation-for="MatkhauAdmin" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PhanquyenId" class="control-label">Quyền Truy Cập</label>
                        <select asp-for="PhanquyenId" class="form-control" asp-items="ViewBag.PhanquyenId"></select>
                        <span asp-validation-for="PhanquyenId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid pt-4 px-4">
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>

