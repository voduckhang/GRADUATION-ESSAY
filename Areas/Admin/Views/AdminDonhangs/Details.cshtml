@model LUANVANTOTNGHIEP_VODUCANKHANG.Models.Donhang

@{
    ViewData["Title"] = "Details";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    List<Chitietdonhang> chitietDonHang = ViewBag.ChiTietDH;

}
<div class="d-flex flex-column justify-content-center align-items-center" id="order-heading">
    <div class="text-uppercase">
        <p>CHI TIẾT ĐƠN HÀNG</p>
    </div>
    <div class="h4" style="color: #777">@Model.Ngaytaodon</div>
    <div class="pt-1">
        <p>Đơn Hàng ID #@Model.DonhangId</p>
    </div>
    <div class="btn close text-white"> &times; </div>
</div>
<div class="wrapper bg-white">
    <div class="table-responsive">
        <table class="table table-borderless">
            <thead>
                <tr class="text-uppercase text-muted">
                    <th scope="col">Họ Và Tên</th>
                    <th scope="col" class="text-right">TỔNG TIỀN</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <th scope="row"> @Model.Khachhang.Hovaten</th>
                    <td class="text-right"><b>@Model.Tongtien.Value.ToString("#,##0") VND</b></td>
                </tr>
            </tbody>
        </table>
    </div>
    @if (chitietDonHang != null && chitietDonHang.Count() > 0)
    {
        foreach (var item in chitietDonHang)
        {
            <div class="d-flex justify-content-start align-items-center list py-1">
                <div><b>Qty: @item.Soluong</b></div>
                <div class="mx-3"> <img src="~/images/HinhAnh/@item.Sanpham.Hinhanh" alt="@item.Sanpham.Hinhanh" class="rounded-circle" width="30" height="30"> </div>
                <div class="order-item">@item.Sanpham.Tensanpham</div>
            </div>
        }
    }
            <div class="pt-2 border-bottom mb-3"></div>               
            <div class="d-flex justify-content-start align-items-center pb-4 pl-3 border-bottom">
                <div class="text-muted"> <button class="text-white btn">Xác Nhận Đơn Hàng</button> </div>
               
            </div>
        
            <div class="row border rounded p-1 my-3">
                <div class="col-md-6 py-3">
                    <div class="d-flex flex-column align-items start">
                        <b>Địa Chỉ Giao Hàng</b>
                        <p class="text-justify pt-2">@Model.Diachigiaohang</p>
                    </div>
                </div>
                <div class="col-md-6 py-3">
                    <div class="d-flex flex-column align-items start">
                        <b>Lưu Ý</b>
                        <p class="text-justify pt-2">James Thompson, 356 Jonathon Apt.220,</p>
                    </div>
                </div>
            </div>
        </div>



