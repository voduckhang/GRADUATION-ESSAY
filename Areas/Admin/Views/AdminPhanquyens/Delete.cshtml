@model LUANVANTOTNGHIEP_VODUCANKHANG.Models.Phanquyen

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_AdminForAdminLayout.cshtml";
}

<h1 class="container-fluid pt-4 px-4">Delete</h1>

<h3 class="container-fluid pt-4 px-4">Are you sure you want to delete this?</h3>

<div class="container-fluid pt-4 px-4" style="color:whitesmoke">
    <div class="row g-4">
        <div class="col-sm-12 col-xl-12">
            <div class="bg-secondary rounded h-100 p-4" style="color:whitesmoke">
                <h6 class="mb-4">Xác nhận xóa quyền truy cập</h6>
                <table class="table" style="color:whitesmoke">

                    <tbody>
                        <tr>

                            <td>ID</td>
                            <td> @Html.DisplayFor(model => model.PhanquyenId)</td>

                        </tr>
                        <tr>

                            <td>Tên Quyền Truy Cập</td>
                            <td> @Html.DisplayFor(model => model.Tenquyentruycap)</td>
                        </tr>
                      
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<div class="container-fluid pt-4 px-4">
    <form asp-action="Delete" asp-route-id="@Model.PhanquyenId">
        <input type="hidden" asp-for="PhanquyenId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-danger">Back to List</a>
    </form>
</div>

